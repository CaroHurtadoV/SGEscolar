@model IEnumerable<SGEscolar.Models.Materia>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de materias</h1>

<p>
    <a asp-action="Create">Crear una nueva materia</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MateriaNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MateriaNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profesor.ProfesorId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MateriaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MateriaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MateriaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
