@model IEnumerable<SGEscolar.Models.Alumno>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de alumnos</h1>

<p>
    <a asp-action="Create">Crear nuevo alumno</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AlumnoNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlumnoTelefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlumnoCorreo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AlumnoNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlumnoTelefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlumnoCorreo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AlumnoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AlumnoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AlumnoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
